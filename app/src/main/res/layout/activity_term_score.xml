<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="comn.example.user.termscore.Activity.TermScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="學年："
            android:textSize="8pt" />

        <EditText
            android:id="@+id/edt_term_score_years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="#ff0095" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="學期："
            android:textSize="8pt" />

        <EditText
            android:id="@+id/edt_term_score_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="#ff0095" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="學號："
            android:textSize="8pt" />

        <EditText
            android:id="@+id/edt_term_score_std_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0095" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_term_score_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2pt"
        android:background="#fadeec"
        android:text="查詢"
        android:textColor="#ff0095"
        android:textSize="8pt" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
